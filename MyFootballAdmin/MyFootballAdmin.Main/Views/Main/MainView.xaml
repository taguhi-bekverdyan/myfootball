<UserControl x:Class="MyFootballAdmin.Main.Views.Main.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyFootballAdmin.Main.Views.Main"
             xmlns:mvvm="http://prismlibrary.com/"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance local:MainViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
               xmlns:common="clr-namespace:MyFootballAdmin.Common;assembly=MyFootballAdmin.Common"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gray">
        <!--<ContentControl mvvm:RegionManager.RegionName="{x:Static common:RegionNames.AddTournamentRegion}" />-->
        <Button Content="Add Tournament" Width="100" Height="25" Command="{Binding AddTournamentCommand}"></Button>
    </Grid>
</UserControl>
