@model MyFootballMvc.ViewModels.LeagueViewModel
@{
    ViewData["Title"] = "Managers";
    Layout = "~/Views/Shared/_LeagueLayout.cshtml";
}

<div class="banner">
    <h2 class="col-10 offset-1">Clubs</h2>
</div>

<div class="main-content container">
    <table class="table table-striped table-bordered" id="managers-table">
        <thead>
            <tr>
                <th scope="col">Club</th>
                <th scope="col">Name</th>
                <th scope="col">Last Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var team in Model.League.Teams)
                {
                    @foreach (var manager in team.Managers)
                    {
                        <td>@Html.ActionLink(@team.Name, "Id", "Club",new { team.Id })</td>
                     
                        <td>@Html.ActionLink(manager.User.FirstName, "Id", "Manager", new { manager.Id })</td>
                        <td>@Html.ActionLink(manager.User.LastName, "Id", "Manager", new { manager.Id })</td>
                    }
                }
                </tr>
            }
        </tbody>
    </table>
</div>