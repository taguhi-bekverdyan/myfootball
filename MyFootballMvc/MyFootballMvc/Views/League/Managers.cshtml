@model MyFootballMvc.ViewModels.LeagueViewModel
@{
    ViewData["Title"] = "Managers";
    Layout = "~/Views/Shared/_LeagueLayout.cshtml";
}

<div class="banner bcolor-2">
    <h2 class="banner-header">Managers</h2>
</div>

<div class="main-content container">
    @if (Model.Managers.Count != 0)
    {
        <table class="table table-striped table-bordered" id="managers-table">
            <thead>
                <tr>
                    <th scope="col">Club</th>
                    <th scope="col">Name</th>
                    <th scope="col">License</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var manager in Model.Managers)
                {
                    string name = manager.User.FirstName + " " + manager.User.LastName;
                    <tr>
                        <td>@Html.ActionLink(Model.League.Teams.Find(i => i.Id == manager.TeamId).Name, "Id", "Club", new { Id = manager.TeamId })</td>
                        <td>@Html.ActionLink(name, "Id", "Manager", new { Id = manager.Id })</td>
                        <td>@manager.License</td>
                    </tr>
                }
        </tbody>
    </table>
    }
    else
    {
        <p id="none">There isn't any manager in this League...</p>
    }
</div>