@model MyFootballMvc.ViewModels.LeagueViewModel
@{
    ViewData["Title"] = "Fixtures";
    Layout = "~/Views/Shared/_LeagueLayout.cshtml";
}
<head>
    <style>

    </style>
</head>
<body>
    <div class="banner">
        <h2 class="col-10 offset-1">Fixtures</h2>
    </div>

    <div class="main-content container">
        @if (Model.FixtureViewItem.IsGenerated)
        {
            var i = 1;
            @foreach (var tour in Model.FixtureViewItem.Tours)
            {
                <br />
                if (!tour.IsPlayed)
                {
                    <h2><i>Tour @i</i></h2><hr />
                }

                ++i;
                @foreach (var match in tour.Matches)
                {
                    if (match.MatchDateTime > DateTime.Now)
                    {
                        <div id="div-fixture">
                            <span id="span-fixture" style="float:left;margin-left:3%;">@Html.ActionLink(@match.Team1.Name, "Id", "Club", new { match.Team1.Id }, null)</span> <a id="a-fixture" asp-area="" asp-controller="Match" asp-action="Id" asp-route-matchId="@match.Id">@match.MatchDateTime</a><span id="span-fixture" style="float:right;margin-right:3%;">@Html.ActionLink(@match.Team2.Name,"Id", "Club", new { match.Team2.Id })</span>
                        </div>
                        <br/>
                    }
                    else
                    {
                        return;
                    }
                }
            }
        }
        else
        {
            <p id="none">@Model.Tournament.Name hasn't generated yet.</p>
        }
    </div>
</body>