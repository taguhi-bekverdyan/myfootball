@model MyFootballMvc.ViewModels.LeagueViewModel
@{
    ViewData["Title"] = "Clubs";
    Layout = "~/Views/Shared/_LeagueLayout.cshtml";
}

<div class="banner">
    <h2 class="col-10 offset-1">Clubs</h2>
</div>

<div class="main-content container">
    <table class="table table-striped table-bordered" id="clubs-table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">ShortName</th>
            <th scope="col">President</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var team in Model.League.Teams)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.ShortName</td>
                <td>@team.President.FirstName @team.President.LastName</td>
            </tr>
        }
        </tbody>
    </table>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#clubs-table').DataTable();
        });
    </script>
</div>