@model MyFootballMvc.ViewModels.ManagerViewModel

@{
    ViewData["Title"] = "Managers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner bcolor-6">
    <h2 class="banner-header">Managers</h2>
</div>

<div class="page-managers main-container container">

    <div class="main-content">
        @if (Model.Managers.Count != 0 && Model.Managers != null)
        {
            <table class="table table-striped table-bordered" id="managers-table">
                <thead>
                <tr>
                    <th scope="col" width="55px">Manager Avatar</th>
                    <th scope="col">Name</th>
                    <th scope="col">Club </th>
                    <th scope="col">License </th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var manager in Model.Managers)
                    {
                        string name = manager.User.FirstName + " " + manager.User.LastName;
                        <tr>
                            <td>
                                <img src="@manager.Avatar" class="avatar-my-profile"/>
                            </td>
                            @if (manager.TeamId != null && manager.TeamId != "")
                            {
                                <td>@Html.ActionLink(Model.Teams.Find(i => i.Id == manager.TeamId).Name, "Id", "Club", new {Id = manager.TeamId})</td>
                            }
                            else
                            {
                                <td>None </td>
                            }

                            <td>@Html.ActionLink(name, "Id", "Manager", new {manager.Id})</td>
                            <td>@manager.License</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p id="none"> There isn't any manager...</p>
        }
    </div>
</div>
