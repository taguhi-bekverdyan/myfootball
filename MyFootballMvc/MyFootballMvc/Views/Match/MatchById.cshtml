@model MyFootballMvc.ViewModels.MatchViewModel

@{
    ViewData["Title"] = "Club";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner bcolor-1">
    <h2 class="banner-header">Match</h2>
</div>

<div class="page-player-by-id main-container container">

    <div class="main-content">
        <ul>
            <li>@Html.LabelFor(p => p.Match.Team1): @Model.Match.Team1.Name</li>
            <li>@Html.LabelFor(p => p.Match.Team2): @Model.Match.Team2.Name</li>
            <li>@Model.Match.MatchDateTime</li>

            @if (Model.Match.MatchDateTime < DateTime.Now)
            {
                <li>Score: @Model.Match.GoalClub1 - @Model.Match.GoalClub2</li>
            }
            @if (Model.Match.RefereeId != null)
            {
                <li>@Html.LabelFor(p => p.Referee): @Model.Referee</li>
            }
        </ul>
    </div>
</div>
